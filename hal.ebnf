	=
	'4' | 'four' | 'fower' | 'for'
	;
five
	=
	'5' | 'five' | 'fife'
	;
six
	=
	'6' | 'six'
	;
seven
	=
	'7' | 'seven'
	;
eight
	=
	'8' | 'eight' | 'ait'
	;
nine
	=
	'9' | 'nine' | 'niner'
	;
